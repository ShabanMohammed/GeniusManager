@page "/employeestatus/{namePage}"
@page "/employeestatus/{namePage}/{id:long}"
@using GeniusManager.App.Components.Pages.LookupPropery.GenericPages
@using GeniusManager.Domain.Entities.Lookups
@rendermode InteractiveServer

<PageTitle>الحالة الوظيفية</PageTitle>
@if (namePage == "list")
{
    <GenericTable TEntity="EmployeeStatus" Title="الحالة الوظيفية" />
}
else if ((namePage == "addNew"))
{

    <GenericAddNew TEntity="EmployeeStatus" Title="الحالة الوظيفية" />
}
else if (namePage == "update")
{
    <GenericEdit TEntity="EmployeeStatus" Title="الحالة الوظيفية" id="id" />
}
else if ((namePage == "deleteconfirm"))
{
    <GenericDeleteConfirm TEntity="EmployeeStatus" Title="الحالة الوظيفية" id="id" />
}
@code {

    [Parameter] public string namePage { get; set; } = "list";
    [Parameter] public long id { get; set; }
}
