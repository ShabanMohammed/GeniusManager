@page "/religion/{namePage}"
@page "/religion/{namePage}/{id:long}"
@using GeniusManager.App.Components.Pages.LookupPropery.GenericPages
@using GeniusManager.Domain.Entities.Lookups
@rendermode InteractiveServer

<PageTitle>الديانة</PageTitle>
@if (namePage == "list")
{
    <GenericTable TEntity="Religion" Title="الديانة" />
}
else if ((namePage == "addNew"))
{

    <GenericAddNew TEntity="Religion" Title="الديانة" />
}
else if (namePage == "update")
{
    <GenericEdit TEntity="Religion" Title="الديانة" id="id" />
}
else if ((namePage == "deleteconfirm"))
{
    <GenericDeleteConfirm TEntity="Religion" Title="الديانة" id="id" />
}
@code {

    [Parameter] public string namePage { get; set; } = "list";
    [Parameter] public long id { get; set; }
}
