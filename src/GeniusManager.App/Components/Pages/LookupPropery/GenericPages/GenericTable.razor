@using GeniusManager.Application.DTO
@using GeniusManager.Application.Services
@using GeniusManager.Domain.Common
@typeparam TEntity where TEntity : BaseEntity, new()
@inject GenericService<TEntity> Service

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="mb-0">@Title</h3>
    <NavLink href="@($"/{entityName}/addNew")" class="btn btn-success">
        <i class="bi bi-plus"></i> إضافة جديد
    </NavLink>
</div>

@if (items is null)
{
    <div class="alert alert-info">
        <i class="bi bi-hourglass-split"></i> جارى التحميل .......
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle shadow-sm">
            <thead class="table-primary ">
                <tr>
                    <th scope="col">الكود</th>
                    <th scope="col">الاسم</th>
                    <th scope="col" class="text-center">الإجراءات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in items)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td class="text-center">
                            <NavLink href="@($"/{entityName}/update/{item.Id}")"
                                     class="btn btn-sm btn-primary shadow-sm me-2">
                                <i class="bi bi-pencil-square"></i> تعديل
                            </NavLink>
                            <NavLink href="@($"/{entityName}/deleteconfirm/{item.Id}")"
                                     class="btn btn-sm btn-danger shadow-sm">
                                <i class="bi bi-trash"></i> حذف
                            </NavLink>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    [Parameter] public string Title { get; set; } = "Generic Table";
    private IEnumerable<LookupDto>? items;
    private string entityName = typeof(TEntity).Name.ToLower();

    protected override async Task OnInitializedAsync()
    {
        items = await Service.GetAllAsync();
    }


}
